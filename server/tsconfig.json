{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "dist",
    "rootDir": "./",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@rebuff/types/*": ["../types/src/*"],
      "@rebuff/client/*": ["../js-client/src/*"],
      "@/*": ["./*"]
    },
    "resolveJsonModule": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "../js-client"
    },
    {
      "path": "../types"
    }
  ]
}
